{
  "name": "sistem-buku-tamu",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:admin\" \"npm run dev:guest\"",
    "dev:single": "next dev --turbopack",
    "dev:admin": "cross-env APP_MODE=admin next dev --turbopack -p 3001",
    "dev:guest": "cross-env APP_MODE=guest next dev --turbopack -p 3000",
    "build": "next build",
    "build:admin": "cross-env APP_MODE=admin next build",
    "build:guest": "cross-env APP_MODE=guest next build",
    "start": "next start",
    "start:admin": "cross-env APP_MODE=admin next start -p 3001",
    "start:guest": "cross-env APP_MODE=guest next start -p 3000",
    "lint": "next lint",
    "migrate": "tsx src/backend/migrations/runMigrations.ts",
    "migrate:single": "tsx -r dotenv/config src/backend/migrations/runSingleMigration.ts"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "mysql2": "^3.14.3",
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "tailwindcss": "^4",
    "tsx": "^4.7.1",
    "typescript": "^5"
  }
}
